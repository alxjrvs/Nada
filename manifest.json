{
  "manifest_version": 2,

  "name": "Nada",
  "description": "That's like pouring perfume on a pig.",
  "version": "1.0",

  "background": {
    "scripts": ["js/background.js"]
  },

  "permissions": [
    "http://fonts.googleapis.com/",
    "https://fonts.googleapis.com/",
    "activeTab"
  ],

  "content_scripts": {
    "matches": "*",
    "js": ["js/jquery-1.11.1.min.js"]
  },

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Nada"
  },

  "web_accessible_resources": [
    "css/app.css",
    "js/nada.js"
  ]
}
